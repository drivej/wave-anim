{
  "name": "@drivej/wave-anim",
  "version": "1.0.0",
  "description": "Sound Visualization",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "vite build --config vite.config.build.ts && npm run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "cd test-app && npm run dev",
    "test:install": "cd test-app && npm install"
  },
  "peerDependencies": {
    "howler": "^2.0.0",
    "lodash": "^4.0.0",
    "mobx": "^6.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "pixi.js": "^8.15.0"
  },
  "devDependencies": {
    "@types/howler": "^2.2.12",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.2",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "howler": "^2.2.4",
    "lodash": "^4.17.23",
    "mobx": "^6.3.5",
    "typescript": "^5.0.0",
    "vite": "^6.0.7"
  },
  "keywords": [
    "pixi",
    "pixijs",
    "animation",
    "sound",
    "audio",
    "react",
    "typescript"
  ],
  "author": "drivej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivej/wave-anim.git"
  }
}
